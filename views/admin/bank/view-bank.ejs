                <script>
                  $('#dataTable').on('click', '.button-update', function(){
                      let id = $(this).data('id');
                      let nama = $(this).data('nama');
                      let noRekening = $(this).data('norekening');
                      let namaBank = $(this).data('namabank');
                     
                      $('#edit-modal').modal('show')
