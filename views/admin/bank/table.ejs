<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">


      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
          Add
      </button>

  </div>
  <div class="card-body">
      <div class="table-responsive">
          <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
              <thead>
                  <tr>
                      <th>No</th>
                      <th>Nama</th>
                      <th>No Rekening</th>
                      <th>Bank</th>
                      <th>Image</th>
                      <th>Action</th>
                  </tr>
              </thead>

              <tbody>
                  <% for(let i=0; i < bank.length; i++) { %>
                      <tr>
                          <td>
                              <%=i + 1 %>
                          </td>
                          <td><%=bank[i].nama %></td>
                          <td><%=bank[i].noRekening %></td>
                          <td><%=bank[i].namaBank %></td>
                          <td>
                            <img src="http://localhost:3000/<%= bank[i].imageUrl%>" alt="imageUrl" width="70" />
                          </td>
                          <td>
                              <form action="/admin/bank/<%=bank[i].id %>?_method=DELETE" method="POST">
                                <a  href="#" class="btn btn-warning btn-circle btn-sm button-update"
                                data-id="<%= bank[i].id %>" data-nama="<%= bank[i].nama %>" data-namabank="<%= bank[i].namaBank %>" data-norekening="<%= bank[i].noRekening %>" 
                               ><i class="fas fa-edit"></i></a>
                               
                                  <button type="submit" class="btn btn-danger btn-circle btn-sm">
                                      <i class="fas fa-trash"></i>
                                  </button>
                              </form>
                          </td>
                      </tr>
                      <% }%>
              </tbody>

          </table>
      </div>
  </div>
</div>
